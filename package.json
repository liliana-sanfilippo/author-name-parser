{
  "name": "@liliana-sanfilippo/author-name-parser",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/liliana-sanfilippo/author-name-parser",
  "description": "A name parser implemented in TypeScript (ESNEXT) to parse names. Intended to be used for Author lists in BibTeX references.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "webpack --config webpack.config.dev.js",
    "generate:parser": "npx antlr4ts -visitor grammar/Authors.g4",
    "generate:lexer": "npx antlr4ts  grammar/AuthorsLexer.g4",
    "generate": "npm run generate:lexer && npm run generate:parser",
    "test": "npm run dev && mocha --require source-map-support/register dev/author-name-parser-dev.js",
    "build-commonjs": "LIB_TYPE=commonjs webpack --config webpack.config.prod.js",
    "build-umd": "LIB_TYPE=umd webpack --config webpack.config.prod.js",
    "build": "npm run build-umd && npm run build-commonjs",
    "build-debug": "webpack --config webpack.config.prod.js --mode development --devtool source-map"
  },
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "keywords": [
    "antlrts",
    "parser",
    "name parser"
  ],
  "author": "Liliana Sanfilippo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liliana-sanfilippo/author-name-parser"
  },
  "bugs": {
    "url": "https://github.com/liliana-sanfilippo/author-name-parser/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/chai": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "assert": "^2.1.0",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.0.0",
    "glob": "^11.0.3",
    "license-webpack-plugin": "^4.0.2",
    "mocha": "^11.7.1",
    "process": "^0.11.10",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^4.10.0",
    "webpack-license-plugin": "^4.5.1",
    "buffer": "^6.0.3",
    "chai": "^4.5.0"
  }
}
